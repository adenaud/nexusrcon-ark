<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anthonydenaud.arkrcon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.anthonydenaud.arkrcon.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anthonydenaud.arkrcon.view.ServerConnectionActivity"
            android:label="@string/title_activity_server_connection"
            android:parentActivityName="com.anthonydenaud.arkrcon.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anthonydenaud.arkrcon.MainActivity" />
        </activity>
        <activity
            android:name="com.anthonydenaud.arkrcon.view.RconActivity"
            android:label="@string/title_activity_rcon"
            android:parentActivityName="com.anthonydenaud.arkrcon.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anthonydenaud.arkrcon.MainActivity" />
        </activity>
        <activity
            android:name="com.anthonydenaud.arkrcon.view.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.anthonydenaud.arkrcon.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anthonydenaud.arkrcon.MainActivity" />
        </activity>
    </application>

</manifest>
